{
  "manifest_version": 3,
  "name": "LeetCode Reminder & Streak Tracker",
  "version": "1.0",
  "description": "Reminds you to solve LeetCode and shows your daily streak.",
  "permissions": ["storage", "notifications", "alarms"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
